OUT_ZIP=ArchTest.zip
LNCR_EXE=ArchTest.exe

DLR=curl
DLR_FLAGS=-L
BASE_URL=http://ftp.jaist.ac.jp/pub/Linux/ArchLinux/iso/2019.08.01/archlinux-bootstrap-2019.08.01-x86_64.tar.gz
LNCR_ZIP_URL=https://github.com/yuk7/wsldl/releases/download/19070200/icons.zip
LNCR_ZIP_EXE=Arch.exe

all: $(OUT_ZIP)

zip: $(OUT_ZIP)
$(OUT_ZIP): ziproot
	@echo -e '\e[1;31mBuilding $(OUT_ZIP)\e[m'
	sudo rm -f $(OUT_ZIP)
	cd ziproot; zip ../$(OUT_ZIP) *

ziproot: Launcher.exe rootfs.tar.gz
	@echo -e '\e[1;31mBuilding ziproot...\e[m'
	sudo rm -rf ziproot
	mkdir ziproot
	cp Launcher.exe ziproot/${LNCR_EXE}
	cp rootfs.tar.gz ziproot/

exe: Launcher.exe
Launcher.exe: icons.zip
	@echo -e '\e[1;31mExtracting Launcher.exe...\e[m'
	unzip icons.zip $(LNCR_ZIP_EXE)
	mv $(LNCR_ZIP_EXE) Launcher.exe

icons.zip:
	@echo -e '\e[1;31mDownloading icons.zip...\e[m'
	$(DLR) $(DLR_FLAGS) $(LNCR_ZIP_URL) -o icons.zip

rootfs.tar.gz: rootfs/root.x86_64
	@echo -e '\e[1;31mBuilding rootfs.tar.gz...\e[m'
	sudo rm -rf rootfs.tar.gz
	cd rootfs/root.x86_64; sudo tar -zcpf ../../rootfs.tar.gz `sudo ls`
	sudo chown `id -un` rootfs.tar.gz

rootfs/root.x86_64: base.tar.gz
	@echo -e '\e[1;31mBuilding rootfs...\e[m'
	sudo rm -rf rootfs
	mkdir rootfs
	sudo tar -zxpf base.tar.gz -C rootfs
	sudo cp -f /etc/resolv.conf rootfs/root.x86_64/etc/resolv.conf
	# sudo chroot rootfs /sbin/apk update
	# sudo chroot rootfs /sbin/apk add bash
	echo "# This file was automatically generated by WSL. To stop automatic generation of this file, remove this line." | sudo tee rootfs/root.x86_64/etc/resolv.conf
	# sudo rm -rf `sudo find rootfs/var/cache/apk/ -type f`
	sudo chmod +x rootfs/root.x86_64

base.tar.gz:
	@echo -e '\e[1;31mDownloading base.tar.gz...\e[m'
	$(DLR) $(DLR_FLAGS) $(BASE_URL) -o base.tar.gz

clean:
	@echo -e '\e[1;31mCleaning files...\e[m'
	-rm ${OUT_ZIP}
	-rm -r ziproot
	-rm Launcher.exe
	-rm icons.zip
	-rm rootfs.tar.gz
	-sudo rm -r rootfs
	-rm base.tar.gz
